@model MyBlog.Models.ResetPasswordModel

<form method="POST" asp-action="ResetPassword">

    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input asp-for="Token" type="hidden" />

    <div class="form-group">
        <label asp-for="NewPassword">New password</label>
        <input asp-for="NewPassword" class="form-control" type="password" name="NewPassword"/>
        <span asp-validation-for="NewPassword" class="text-danger"></span>
    </div>
    
    <div class="form-group">
        <label asp-for="RePassword">Retype password</label>
        <input asp-for="RePassword" class="form-control" type="password" name="RePassword"/>
        <span asp-validation-for="RePassword" class="text-danger"></span>
    </div>

    @Html.AntiForgeryToken()

    <input class="btn btn-primary" type="submit" value="Reset password"/>
    
</form>